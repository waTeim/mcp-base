# MCP Base Test Server - Production Dockerfile
# Test server using OIDC authentication (accepts Auth0 JWT tokens)
# This is the sidecar container running alongside the main server

FROM python:3.11-slim

# Metadata
LABEL maintainer="MCP Base"
LABEL description="MCP Test Server for MCP Base (OIDC authentication)"
LABEL version="0.1.0"
LABEL component="test-sidecar"

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better layer caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY src/mcp_base_test_server.py .
COPY src/mcp_base_tools.py .
COPY src/user_hash.py .
COPY src/auth_oidc.py .
COPY src/mcp_context.py .

# Create a non-root user for security
RUN useradd -m -u 1000 mcpuser && \
    chown -R mcpuser:mcpuser /app

USER mcpuser

# Expose test server port
EXPOSE 4209

# Health check endpoint
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:4209/healthz || exit 1

# Default command - run test server on port 4209
# OIDC configuration should be provided via config file at /etc/mcp/oidc.yaml
CMD ["python", "mcp_base_test_server.py", "--port", "4209"]
