{% raw %}# Role for secrets management (always needed for credential handling)
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: {{ include "{% endraw %}{{ chart_name }}{% raw %}.fullname" . }}-secrets
  namespace: {{ .Release.Namespace }}
  labels:
    {{- include "{% endraw %}{{ chart_name }}{% raw %}.labels" . | nindent 4 }}
rules:
  - apiGroups: [""]
    resources: ["secrets"]
    verbs: ["get", "list", "watch", "create", "update", "patch", "delete"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: {{ include "{% endraw %}{{ chart_name }}{% raw %}.fullname" . }}-secrets
  namespace: {{ .Release.Namespace }}
  labels:
    {{- include "{% endraw %}{{ chart_name }}{% raw %}.labels" . | nindent 4 }}
subjects:
  - kind: ServiceAccount
    name: {{ include "{% endraw %}{{ chart_name }}{% raw %}.serviceAccountName" . }}
    namespace: {{ .Release.Namespace }}
roleRef:
  kind: Role
  name: {{ include "{% endraw %}{{ chart_name }}{% raw %}.fullname" . }}-secrets
  apiGroup: rbac.authorization.k8s.io
{% endraw %}
{% if operator_cluster_roles %}
---
# Bind to operator-provided ClusterRoles
{% for role in operator_cluster_roles %}
{% raw %}apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: {{ include "{% endraw %}{{ chart_name }}{% raw %}.fullname" . }}-{% endraw %}{{ role | replace(".", "-") }}{% raw %}
  namespace: {{ .Release.Namespace }}
  labels:
    {{- include "{% endraw %}{{ chart_name }}{% raw %}.labels" . | nindent 4 }}
subjects:
  - kind: ServiceAccount
    name: {{ include "{% endraw %}{{ chart_name }}{% raw %}.serviceAccountName" . }}
    namespace: {{ .Release.Namespace }}
roleRef:
  kind: ClusterRole
  name: {% endraw %}{{ role }}{% raw %}
  apiGroup: rbac.authorization.k8s.io
{% endraw %}
{% if not loop.last %}---{% endif %}
{% endfor %}
{% endif %}
