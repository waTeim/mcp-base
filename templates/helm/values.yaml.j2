# Default values for {{ chart_name }}.
# This is a YAML-formatted file.
# Declare variables to be passed into your templates.

replicaCount: 1

image:
  repository: your-registry.example.com/{{ chart_name }}
  pullPolicy: IfNotPresent
  # Overrides the image tag whose default is the chart appVersion.
  tag: ""

imagePullSecrets: []
nameOverride: ""
fullnameOverride: ""

serviceAccount:
  # Specifies whether a service account should be created
  create: true
  # Annotations to add to the service account
  annotations: {}
  # The name of the service account to use.
  # If not set and create is true, a name is generated using the fullname template
  name: "{{ chart_name }}"

podAnnotations: {}

podSecurityContext: {}
  # fsGroup: 2000

securityContext: {}
  # capabilities:
  #   drop:
  #   - ALL
  # readOnlyRootFilesystem: true
  # runAsNonRoot: true
  # runAsUser: 1000

service:
  type: ClusterIP
  port: {{ port }}
  # Test sidecar port (only used when testSidecar.enabled = true)
  testPort: {{ port + 1 }}

# Test Sidecar Configuration
# Enables a second container for testing using standard OIDC authentication
testSidecar:
  # Enable test sidecar container
  enabled: false

  # Image for test sidecar (defaults to main image)
  image:
    repository: ""  # Leave empty to use main image
    tag: ""         # Leave empty to use main image tag
    pullPolicy: ""  # Leave empty to use main image pullPolicy

  # Resource limits for test sidecar
  resources: {}

ingress:
  enabled: false
  className: ""
  annotations: {}
    # kubernetes.io/ingress.class: nginx
    # kubernetes.io/tls-acme: "true"
  # Single hostname for this MCP server
  host: "chart-example.local"
  # Path for the MCP endpoint (usually /)
  path: /
  pathType: ImplementationSpecific
  # TLS configuration
  tls:
    enabled: false
    secretName: ""

resources: {}
  # limits:
  #   cpu: 100m
  #   memory: 128Mi
  # requests:
  #   cpu: 100m
  #   memory: 128Mi

autoscaling:
  enabled: false
  minReplicas: 1
  maxReplicas: 100
  targetCPUUtilizationPercentage: 80
  # targetMemoryUtilizationPercentage: 80

nodeSelector: {}

tolerations: []

affinity: {}

# JWT Signing Key Secret
# REQUIRED for production deployments (especially multi-replica)
jwt:
  # Name of the Kubernetes secret containing the JWT signing key
  # Secret should have key: jwt-signing-key
  # Default: {% raw %}{{ .Release.Name }}{% endraw %}-jwt-signing-key
  secretName: ""  # Leave empty to use default

# OIDC/OAuth2 Authentication Configuration
# REQUIRED for production HTTP mode deployment
oidc:
  # REQUIRED: OIDC Issuer URL (base URL of your identity provider)
  # Examples:
  #   https://keycloak.example.com/realms/your-realm
  #   https://your-org.okta.com/oauth2/default
  #   https://login.microsoftonline.com/{tenant-id}/v2.0
  issuer: "https://your-issuer.example.com"

  # REQUIRED: Expected audience claim in JWT tokens
  # This should match what your IdP issues in the 'aud' claim
  audience: "https://your-api.example.com/mcp"

  # REQUIRED: OIDC application client ID (pre-registered application)
  clientId: ""

  # OPTIONAL: Public URL of this MCP server (for OAuth callbacks)
  # If not set, auto-generated from ingress.host
  # IMPORTANT: Set this if your server is behind a reverse proxy or load balancer
  # Examples:
  #   https://mcp.example.com
  #   https://api.example.com/mcp-server
  publicUrl: ""

  # OPTIONAL: OIDC credentials secret name
  # Default: {{ .Release.Name }}-oidc-credentials
  credentialsSecretName: ""

  # OPTIONAL: Client secret key name inside the credentials secret
  # Common values: client-secret, server-client-secret
  clientSecretKey: ""

  # OPTIONAL: Override JWKS URI (auto-discovered from issuer by default)
  # jwksUri: ""

  # OPTIONAL: Required OAuth2 scope (default: openid)
  # scope: "openid"

  # NOTE: OIDC credentials secret is automatically derived from release name
  # Secret name will be: {% raw %}{{ .Release.Name }}{% endraw %}-oidc-credentials
  #
  # Create the secret using your provider tooling

{% if operator_cluster_roles %}
# Operator RBAC Configuration
# Bind to existing ClusterRoles provided by the operator
rbac:
  # ClusterRoles to bind to (provided by operator)
  operatorClusterRoles:
{% for role in operator_cluster_roles %}
    - {{ role }}
{% endfor %}
{% endif %}

# Prompt Management Configuration
# Prompts are loaded from a ConfigMap and can be hot-reloaded
prompts:
  # Enable prompt management
  enabled: true

  # Prompt bundle version (semver)
  version: "1.0.0"

  # Prompt definitions
  # Customize or replace these with your own prompts
  definitions:
    - id: "example-prompt"
      name: "Example Prompt"
      description: "An example prompt template"
      template: |
        This is an example prompt for {{ server_name }}.

        User Input: {{"{{" }} input {{"}}"}}"

        Please process this request according to the server's capabilities.
      arguments:
        - name: input
          description: "User input to process"
          required: true

# Redis Configuration
# Used for OAuth session persistence across restarts
redis:
  # Enable Redis deployment
  enabled: true

  # Redis architecture (standalone, replication, or cluster)
  architecture: standalone

  # Number of replicas (only for replication/cluster modes)
  replicaCount: 1

  # Redis server configuration
  master:
    configuration: |
      maxmemory 256mb
      maxmemory-policy allkeys-lru

  # Redis resources
  resources:
    requests:
      cpu: 100m
      memory: 128Mi
    limits:
      cpu: 200m
      memory: 256Mi

  # Persistence configuration
  persistence:
    enabled: true
    storageClass: ""  # Use default storage class
    accessMode: ReadWriteOnce
    size: 1Gi

  # Pod security context
  podSecurityContext:
    fsGroup: 999
    runAsUser: 999
    runAsGroup: 999
    runAsNonRoot: true

  # Container security context
  containerSecurityContext:
    runAsUser: 999
    runAsGroup: 999
    runAsNonRoot: true
    readOnlyRootFilesystem: true
    allowPrivilegeEscalation: false
    capabilities:
      drop:
        - ALL
    seccompProfile:
      type: RuntimeDefault

  # Service configuration
  service:
    type: ClusterIP
    port: 6379

  # Authentication
  auth:
    enabled: false
    password: ""
