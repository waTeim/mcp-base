# {{ server_name }} MCP Server - Test Container Dockerfile
# For running the test server in Kubernetes with authentication disabled
# Used for integration testing and CI/CD pipelines

FROM python:3.11-slim

# Metadata
LABEL maintainer="{{ server_name }} MCP Server"
LABEL description="{{ server_description }} - Test Server"
LABEL version="1.0.0"
LABEL type="test"

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better layer caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code (same as production)
COPY src/{{ server_name_snake }}_server.py .
COPY src/{{ server_name_snake }}_test_server.py .
COPY src/{{ server_name_snake }}_tools.py .
COPY src/mcp_context.py .
COPY src/user_hash.py .
COPY src/auth_oidc.py .
COPY src/auth_fastmcp.py .
COPY src/prompt_registry.py .

# Copy test framework
COPY test/ ./test/

# Create a non-root user for security
RUN useradd -m -u 1000 mcpuser && \
    chown -R mcpuser:mcpuser /app

USER mcpuser

# Expose HTTP port (test server uses same port)
EXPOSE {{ port }}

# Health check endpoint
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:{{ port }}/healthz || exit 1

# Run the test server with --no-auth by default
# Override with environment variables or command-line args
CMD ["python", "{{ server_name_snake }}_test_server.py", "--no-auth", "--host", "0.0.0.0", "--port", "{{ port }}"]
